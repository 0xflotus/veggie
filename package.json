{
  "name": "veggie",
  "version": "2.3.0",
  "description": "Interactive mock server for profiling user scenarios",
  "main": "dist/veggie.js",
  "module": "dist/veggie.es.js",
  "browser": "dist/veggie.api.js",
  "bin": {
    "veg": "bin/www"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "nodemon -w src -x 'npm run build'",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "preversion": "npm test",
    "version": "npm run build # Get latest version for banners",
    "postversion": "git push && git push --tags && npm publish",
    "pretest": "npm run build",
    "serve": "bin/veg --dir test/services/*.js",
    "test": "nyc --reporter=html --reporter=text mocha",
    "test:watch": "nodemon -w dist -w test -x 'nyc mocha'",
    "watch": "parallelshell 'npm run test:watch' 'npm run build:watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micburks/veggie.git"
  },
  "keywords": [
    "mock",
    "server",
    "interactive",
    "express",
    "services",
    "repl"
  ],
  "author": "Mickey Burks",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micburks/veggie/issues"
  },
  "homepage": "https://github.com/micburks/veggie#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "es6-promise": "^4.1.1",
    "express": "^4.16.2",
    "get-port": "^3.2.0",
    "glob": "^7.1.2",
    "isomorphic-fetch": "^2.2.1",
    "meow": "^3.7.0",
    "path-to-regexp": "^2.1.0",
    "rollup": "^0.50.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "coveralls": "^3.0.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "parallelshell": "^3.0.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "files": [
    "bin",
    "dist"
  ]
}
